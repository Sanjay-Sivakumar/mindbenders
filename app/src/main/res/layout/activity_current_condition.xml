<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CurrentCondition">

    <EditText
        android:id="@+id/editTextbednochanged"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:hint="BED NO"
        android:textColorHint="#000000"
        android:inputType="textPersonName"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/editTextpatientivnamechanged"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/textbox"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="IV NAME"
        android:inputType="textPostalAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editTextpatientivfinalvaluechanged"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="IV FINAL VALUE"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editTextpatientcurrentivmlchanged"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="400dp"
        android:textColorHint="#000000"
        android:background="@drawable/textbox"
        android:ems="10"
        android:hint="CurrentIV"
        android:inputType="date"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editTextpatientmedcondchanged"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/textbox"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="MEDICAL CONDITION"
        android:inputType="textPostalAddress"
        android:textAlignment="center" />

    <Button
        android:id="@+id/changethebottle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="550dp"
        android:background="@color/pinky"
        android:gravity="center"
        android:text="Change The Bottle" />

</RelativeLayout>