<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLoginPage"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/imageViewadmin"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/admin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etadminemail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Username"
        android:textColorHint="#000000"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/etadminpassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etadminpassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_password"
        android:ems="10"
        android:textColorHint="#000000"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="130dp"
        android:layout_alignBottom="@+id/cardView"
        android:layout_alignLeft="@+id/etadminemail"
        android:layout_alignStart="@+id/etadminemail" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
       android:layout_marginTop="550dp"
        android:layout_marginStart="250dp"
        android:id="@+id/cardView"
        android:layout_marginBottom="31dp"
        android:layout_centerHorizontal="true"
        android:background="#fff">

        <TextView
            android:id="@+id/oldadminreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="28sp" />
    </android.support.v7.widget.CardView>


</RelativeLayout>